{
  "name": "goodb",
  "version": "0.2.5",
  "description": "Fast and slim JSON database in pure typescript/javascript",
  "homepage": "https://github.com/kowy/goodb",
  "main": "./lib/gooDb.js",
  "types": "./lib/gooDb.d.ts",

  "repository": {
    "type": "git",
    "url": "git+https://github.com/kowy/goodb.git"
  },

  "bugs": {
    "url": "https://github.com/kowy/goodb/issues"
  },

  "license": "MIT",

  "keywords": [
    "database",
    "typescript",
    "library",
    "lowdb"
  ],

  "author": "David Kovar <kowy@centrum.cz>",

  "scripts": {
    "build": "del-cli lib && tsc --build ./tsconfig.bundle.json",
    "test": "jest && yarn lint",
    "lint": "ls-lint && eslint --ext .js,.ts {src,test}/**/* --fix && prettier --write \"{src,test}/**/*.{js,ts}\"",
    "prepare": "yarn build"
  },

  "engines": {
    "node": ">= 12"
  },

  "files": [
    "/lib"
  ],

  "devDependencies": {
    "@ls-lint/ls-lint": "^1.9.2",
    "@types/eslint": "^7.2.6",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^26.0.15",
    "@types/mutexify": "^1.2.0",
    "@types/node": "^14.14.10",
    "@types/prettier": "^2.1.6",
    "@types/tempy": "^0.3.0",
    "@types/nanoid": "^2.1.0",
    "@types/write-file-atomic": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "codecov": "^3.8.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.17.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.0",
    "tempy": "^1.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },

  "dependencies": {
    "fs": "~0.0.1-security",
    "fast-deep-equal": "^3.1.3",
    "mutexify": "^1.2.0",
    "nanoid": "^4.0.0",
    "write-file-atomic": "^4.0.1"
  },

  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testPathIgnorePatterns": ["/lib"],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },

  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },

  "prettier": {
    "printWidth": 130,
    "semi": false,
    "singleQuote": false
  }
}
