{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        // Transpilation settings.
        "module": "commonjs",
        "target": "es6",

        // Output settings.
        "charset": "utf-8",
        "newLine": "LF",
        "sourceMap": true,

        // Type declaration settings.
        "declaration": true,
        "declarationMap": true
    },
    "exclude": ["./src/**/*.test.ts"]
}